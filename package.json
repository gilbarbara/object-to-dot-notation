{
  "name": "object-to-dot-notation",
  "version": "0.1.3",
  "description": "Convert simple objects to dot notation",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbarbara/object-to-dot-notation.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/object-to-dot-notation/issues"
  },
  "homepage": "https://github.com/gilbarbara/object-to-dot-notation#readme",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "src"
  ],
  "license": "MIT",
  "keywords": [
    "dot",
    "notation",
    "object",
    "converter"
  ],
  "dependencies": {
    "is-plain-obj": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-do-expressions": "^7.5.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-function-sent": "^7.5.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.5.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.5.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.7"
  },
  "scripts": {
    "build": "npm run clean && npm run build:commonjs && npm run build:es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib",
    "build:es": "cross-env NODE_ENV=production babel src -d es",
    "clean": "rimraf es && rimraf lib",
    "lint": "eslint src",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "size": "size-limit",
    "validate": "npm run lint && npm test && npm run build && npm run size",
    "prepublishOnly": "npm run validate"
  },
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "1 KB"
    },
    {
      "path": "./es/index.js",
      "limit": "1 KB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  }
}
